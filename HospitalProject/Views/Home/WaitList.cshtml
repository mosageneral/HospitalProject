@model IEnumerable<HospitalProject.Models.PatientHagz>

@{
    ViewBag.Title = "WaitList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>لائحة الإنتظار</h2>


<table class="table">
    <tr>
       
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Age)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.KashfDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Number)
        </th>
       
       
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
       
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Age)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.KashfDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Number)
        </td>
        @{if (HttpContext.Current.User.IsInRole("Nurse"))
            {
            <td>
                @Html.ActionLink("تعديل", "Edit", "PatientHagzs", new { id = item.Id }, new { @class = "btn btn-primary btn-lg" })

            </td>
            }
            else
            {
                <td>
                    @Html.ActionLink("كشف", "Edit", "PatientHagzs", new { id = item.Id }, new { @class = "btn btn-primary btn-lg" })

                </td>
            }


        }
    </tr>
}

</table>
