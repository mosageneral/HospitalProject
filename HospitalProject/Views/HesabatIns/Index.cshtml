@model IEnumerable<HospitalProject.Models.HesabatIn>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>رئيسية الحسابات</h2>
@using (Html.BeginForm("search2", "Home", FormMethod.Post))
{
    <input id="searchName2" name="searchName2" class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
}
<p>
    @Html.ActionLink("انشاء جديد", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PatientName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EntryMoney)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PayType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfpay)
        </th>
       
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PatientName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EntryMoney)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PayType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfpay)
            </td>     
        <td>
            @Html.ActionLink("تعديل", "Edit", new { id=item.Id }) |
            @Html.ActionLink("تفاصيل", "Details", new { id=item.Id }) |
            @Html.ActionLink("حذف", "Delete", new { id=item.Id })
        </td>
    </tr>
}
    <tr>
        <td align="right" class="success" colspan="5">اجمالي</td>
        <td class="success">@ViewBag.sum</td>
    </tr> 

</table>
